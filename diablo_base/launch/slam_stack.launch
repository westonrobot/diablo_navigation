<launch>

    <node name="robot_status_example" pkg="diablo_sdk" type="robot_status_example" />

    <node name="status_node" pkg="diablo_base" type="formula_velocity" />

    <include file="$(find rplidar_ros)/launch/rplidar_a2m8.launch" />

    <node name="gmapping" pkg="gmapping" type="slam_gmapping">
        <remap from="scan" to="scan" />
        <param name="base_frame" value="base_link" />
        <param name="odom_frame" value="odom" />
        <param name="map_frame" value="map" />
        <param name="maxUrange" value="8.0" />
        <param name="maxRange" value="8.0" />
        <param name="sigma" value="0.05" />
        <param name="kernelSize" value="0.2" />
        <param name="lstep" value="0.01" />
        <param name="astep" value="0.01" />
        <param name="iterations" value="5" />
        <param name="linearUpdate" value="0.1" />
        <param name="angularUpdate" value="0.1" />
        <param name="xmin" value="-10.0" />
        <param name="xmax" value="10.0" />
        <param name="ymin" value="-10.0" />
        <param name="ymax" value="10.0" />
        <param name="delta" value="0.02" />
    </node>

    <!-- <node name="amcl" pkg="amcl" type="amcl">
        <remap from="scan" to="scan" />
        <param name="use_map_topic" value="true" />
    </node> -->

</launch>